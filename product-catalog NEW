<script>
const PRODUCTS = [
  {code:"SM10", name:"Semaglutide", spec:"10mg*10vials", price:80, img:"images/semaglutide.png"},
  {code:"TR10", name:"Tirzepatide", spec:"10mg*10vials", price:90, img:"images/tirzepatide.png"},
  {code:"TR30", name:"Tirzepatide", spec:"30mg*10vials", price:130, img:"images/tirzepatide-30.png"},
  {code:"TR100", name:"Tirzepatide (10ml)", spec:"100mg*10vials", price:360, img:"images/tirzepatide-100.png"},
  {code:"RT10", name:"Retatrutide", spec:"10mg*10vials", price:125, img:"images/retatrutide.png"},
  {code:"RT30", name:"Retatrutide", spec:"30mg*10vials", price:240, img:"images/retatrutide-30.png"},
  {code:"CGL5", name:"Cagrilintide", spec:"5mg*10vials", price:100, img:"images/cagrilintide.png"},
