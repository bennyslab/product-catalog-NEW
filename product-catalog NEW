  {code:"BB20", name:"BPC 10mg + TB 10mg", spec:"20mg*10vials", price:180, img:"images/bpc-tb.png"},
  {code:"BC10", name:"BPC157", spec:"10mg*10vials", price:70, img:"images/bpc157.png"},
  {code:"BT10", name:"TB500 (Thy B4 Ace)", spec:"10mg*10vials", price:140, img:"images/tb500.png"},
  {code:"H10", name:"HGH", spec:"10iu*10vials", price:55, img:"images/hgh.png"},
  {code:"H36", name:"HGH", spec:"36iu*10vials", price:150, img:"images/hgh-36.png"},
  {code:"TSM10", name:"Tesamorelin", spec:"10mg*10vials", price:140, img:"images/tesamorelin.png"},
  {code:"SMO10", name:"Sermorelin Acetate", spec:"10mg*10vials", price:120, img:"images/sermorelin.png"},
  {code:"ML10", name:"MT-2 (Melanotan 2 Acetate)", spec:"10mg*10vials", price:42, img:"images/mt2.png"},
  {code:"KLOW80", name:"BPC 157 10mg+GHK-CU 50mg", spec:"80mg*10vials", price:190, img:"images/bpc-ghkcu-80.png"},
  {code:"NJ500", name:"NAD+", spec:"500mg*10vials", price:70, img:"images/nad.png"},
  {code:"SK10", name:"Selank", spec:"10mg*10vials", price:48, img:"images/selank.png"},
  {code:"XA10", name:"Semax", spec:"10mg*10vials", price:48, img:"images/semax.png"},
  {code:"IP5", name:"Ipamorelin", spec:"5mg*10vials", price:40, img:"images/ipamorelin.png"},
  {code:"CND5", name:"CJC-1295 Without DAC", spec:"5mg*10vials", price:75, img:"images/cjc1295-no-dac.png"},
  {code:"CD5", name:"CJC-1295 With DAC", spec:"5mg*10vials", price:140, img:"images/cjc1295-dac.png"},
  {code:"IG1", name:"IGF-1LR3", spec:"1mg*10vials", price:170, img:"images/igf1lr3.png"},
  {code:"10AM", name:"5-amino-1mq", spec:"10mg*10vials", price:58, img:"images/5amino1mq.png"}
];
let quantities = {};
PRODUCTS.forEach(p => quantities[p.code] = 0);

function renderProducts() {
  document.getElementById('products').innerHTML = PRODUCTS.map(product => `
    <div class="product">
      <img src="${product.img}" alt="${product.name}">
      <div class="product-name">${product.name}</div>
      <div class="product-spec">${product.spec}</div>
      <div class="product-price">$${product.price}</div>
      <div class="cart-controls">
        <button class="qty-btn" onclick="changeQty('${product.code}', -1)">-</button>
        <span class="qty-display" id="qty-${product.code}">${quantities[product.code]}</span>
        <button class="qty-btn" onclick="changeQty('${product.code}', 1)">+</button>
      </div>
    </div>
  `).join('');
}
function changeQty(code, delta) {
  quantities[code] = Math.max(0, quantities[code] + delta);
  document.getElementById(`qty-${code}`).textContent = quantities[code];
  renderCart();
}
function renderCart() {
  const items = PRODUCTS.filter(p => quantities[p.code]>0).map(p=>({...p,qty:quantities[p.code]}));
  if(items.length===0) { document.getElementById('cartSummary').innerHTML = ""; return; }
  let total = items.reduce((sum,i)=>sum+i.qty*i.price,0);
  document.getElementById('cartSummary').innerHTML = `
    <div class="cart-summary">
      <b>Your Cart:</b>
      ${items.map(i=>`<div class="cart-item">${i.name} (${i.spec}) × ${i.qty} — $${(i.price*i.qty).toFixed(2)}</div>`).join('')}
      <div class="cart-total">Total: $${total.toFixed(2)}</div>
      <button class="checkout-btn" onclick="checkout()">Checkout</button>
    </div>`;
}
function checkout() {
  const discordUserId = "123456789"; // Replace with param from URL in production
  const cart = PRODUCTS.filter(p => quantities[p.code]>0).map(p=>({code:p.code,name:p.name,spec:p.spec,price:p.price,qty:quantities[p.code]}));
  const total = cart.reduce((sum,i)=>sum+i.qty*i.price,0);
  alert("Order sent to Discord bot!\n\n" +
    "User: " + discordUserId +
    "\nCart: " + cart.map(i=>`${i.name} x${i.qty}`).join(", ") +
    `\nTotal: $${total.toFixed(2)}\n\n` +
    "In production, this data POSTs to your bot endpoint, which opens a ticket and prompts for payment!"
  );
  document.getElementById('cartSummary').innerHTML = `<div class="success">Your order has been sent to Discord.<br>Please return to Discord to complete payment and confirmation.</div>`;
  PRODUCTS.forEach(p=>quantities[p.code]=0);
  renderProducts();
}
renderProducts();
</script>
